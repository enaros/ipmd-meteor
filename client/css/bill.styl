#bill
	.debt
		background: #fff

		&:after
			content: ""
			display: table
			clear: both

		*
			float:left
			font-size: 2.2em
			font-weight: bold

		span
			margin-top: 7px
			margin-left: 5px
			color: rgba(0, 0, 0, 0.74902)

		input
			margin:0
			padding:5px
			width: 120px

	li.thumb
		fieldset
			float:left
			border: 0
			margin-top: 25px

			input[type=checkbox]
				float:left

			span
				padding-left: 8px
				line-height: 27px

		button
			margin-top: 20px
			margin-left: 14px
			float:left

			.icon
				display: inline
				margin-top: 7px
				margin-right: 0
				float: none